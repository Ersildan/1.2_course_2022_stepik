a = ['а','у','о','ы','и','э','я','ю','ё','е']
b = ['б', 'в', 'г', 'д', 'ж', 'з', 'й', 'к', 'л', 'м', 'н', 'п', 'р', 'с', 'т', 'ф', 'х', 'ц', 'ч', 'ш', 'щ']
sogl = 0
glas = 0

n = input().lower()
for i in range(0, len(n)):
    if n[i] in a:
      glas += 1
    if n[i] in b:
      sogl += 1

print('Количество гласных букв равно', glas)
print('Количество согласных букв равно', sogl)
